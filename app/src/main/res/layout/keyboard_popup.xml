<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/keyboard_popup_panel_background_light">
       <!--  android:paddingLeft="16dip"
        android:paddingRight="16dip" -->
        
    <net.toload.main.hd.keyboard.LIMEKeyboardBaseView
            xmlns:limehd="http://schemas.android.com/apk/res-auto"
            android:id="@+id/LIMEPopupKeyboard"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:keyTextSize = "@dimen/key_text_size"
        	android:labelTextSize = "@dimen/label_text_size"
            style="?attr/LIMEPopupKeyboardLayout"
            limehd:keyHysteresisDistance="0dip"
            limehd:verticalCorrection="@dimen/mini_keyboard_vertical_correction"
            />
    <!--android:background="@color/limekeyboard_transparent"
            limehd:keyBackground="@drawable/btn_keyboard_key_popup_light"-->

</LinearLayout>
